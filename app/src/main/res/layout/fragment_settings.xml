<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <lwt.sysu.babysleeptalkrecorder.libs.SettingWithSwitchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:settingCaption="@string/pref_high_quality_desc"
            app:settingPreferenceKey="@string/pref_high_quality_key"
            app:settingTitle="@string/pref_high_quality_title" />
    </android.support.v7.widget.CardView>
</LinearLayout>